{

  "compilerOptions": {
    "outDir": "./dist", // Ensure compiled files go to the correct directory
    "rootDir": "./src", // Ensure the root directory is set to ./src
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "types": ["node", "express"]
  },
  "include": ["src/**/*"], // Only include files under src/
  "exclude": ["node_modules"] // Exclude node_modules
}
